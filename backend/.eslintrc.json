{
  "root": true,
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "rules": {
    "no-empty": "off",
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "comma-dangle": 0,
    "no-undef": 0,
    "no-use-before-define": 0,
    "no-global-assign": 0,
    "space-before-function-paren": 0,
    "require-await": 2,
    "quotes": ["error", "double"]
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "es6": true
  }
}
